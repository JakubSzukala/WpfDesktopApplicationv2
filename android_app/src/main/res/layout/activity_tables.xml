<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TablesActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"

    >

    <TextView
        android:id="@+id/textViewErrorMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="DATA TABLE"
        android:textColor="@color/Black"
        android:textSize="25sp"></TextView>



    <TableRow>

        <TextView
            android:id="@+id/name1"
            android:layout_width="239dp"
            android:layout_weight="0.8"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="3dip"
            android:text="        Temperature"
            android:textColor="@color/Black"
            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/value1"
            android:layout_width="243dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="3dip"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/unit1"
            android:layout_width="1dp"
            android:layout_weight="0.8"
            android:padding="3dip"
            android:textColor="@color/white"
            android:textSize="1dp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/name2"
            android:layout_width="80dip"
            android:layout_weight="0.8"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="3dip"
            android:text="        Pressure"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/value2"
            android:textSize="20dp"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="2"
            android:textColor="@color/Black"
            />


        <TextView
            android:id="@+id/unit2"
            android:layout_width="80dip"
            android:layout_weight="0.8"
            android:padding="3dip"
            android:textColor="@color/white"
            android:textSize="1dp"/>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/name3"
            android:layout_width="100dip"
            android:layout_weight="0.8"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="3dip"
            android:text="        Humidity"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/value3"
            android:textSize="20dp"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="2"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/unit3"
            android:layout_width="80dip"
            android:layout_weight="0.8"
            android:padding="3dip"
            android:textColor="@color/white"
            android:textSize="1dp"/>
    </TableRow>
    <TableRow>

        <TextView
            android:id="@+id/name4"
            android:layout_width="100dip"
            android:layout_weight="0.8"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="3dip"
            android:text="        Roll"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/value4"
            android:textSize="20dp"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="2"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/unit4"
            android:layout_width="80dip"
            android:layout_weight="0.8"
            android:padding="3dip"
            android:textColor="@color/white"
            android:textSize="1dp"/>
    </TableRow>
    <TableRow>

        <TextView
            android:id="@+id/name5"
            android:layout_width="100dip"
            android:layout_weight="0.8"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="3dip"
            android:text="        Pitch"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/value5"
            android:textSize="20dp"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="2"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/unit5"
            android:layout_width="80dip"
            android:layout_weight="0.8"
            android:padding="3dip"
            android:textColor="@color/white"
            android:textSize="1dp"/>

    </TableRow>
    <TableRow>

        <TextView
            android:id="@+id/name6"
            android:layout_width="100dip"
            android:layout_weight="0.8"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="3dip"
            android:text="        Yaw"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/value6"
            android:textSize="20dp"
            android:layout_width="80dip"
            android:padding="3dip"
            android:layout_weight="2"
            android:textColor="@color/Black"
            />

        <TextView
            android:id="@+id/unit6"
            android:layout_width="100dip"
            android:layout_weight="0.8"
            android:padding="3dip"
            android:textColor="@color/white"
            android:textSize="1dp"/>
    </TableRow>

    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startBtnTable"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Green"
            android:onClick="btns_onClick"
            android:text="GET DATA"
            android:textColor="@color/Black" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/stopBtnTable"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Green"
            android:onClick="btns_onClick"
            android:text="@string/stopbtntext"
            android:textColor="@color/Black" />
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name8"
            android:layout_width="100dip"
            android:layout_weight="0.8"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="3dip"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/value8"
            android:layout_width="80dip"
            android:layout_weight="2"
            android:padding="3dip"
            android:textColor="@color/white" />

        <TextView
